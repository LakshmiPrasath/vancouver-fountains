extends layout

block content

  div.row
    div#panel.col-md-4
      div.panel.panel-primary
        div.panel-heading.text-center
          h3.panel-title Find Your Drinking Fountains
        div.panel-body
          p.lead Time taken: 
            span#timetaken

          form#search-form(role="form")
            div.form-group
              label(for="searchInput") Search
              input.form-control(type="text", name="location", placeholder="Downtown")
              span.help-block Enter an address, location or intersection to find 20 closest drinking fountains
              button.btn.btn-primary(type="submit", style="margin-right: 10px") Find
              span OR
              button#usegmm.btn.btn-primary(type="button", style="margin-left: 10px") Find All

          div#markerlist.list-group

    div.col-md-8
      div#map